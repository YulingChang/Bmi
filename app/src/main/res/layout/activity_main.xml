<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ling.bmi.MainActivity">

    <TextView
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:text="Weight"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/ed.weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:text="Height"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed.weight"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ed.weight" />

    <EditText
        android:id="@+id/ed.height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/b_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed.height"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ed.height" />

    <Button
        android:id="@+id/b_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="INFO"
        app:layout_constraintTop_toBottomOf="@+id/b_bmi"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/b_bmi" />

</android.support.constraint.ConstraintLayout>
